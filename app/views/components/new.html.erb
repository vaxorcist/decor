<%# decor/app/views/components/new.html.erb - version 1.1 %>
<%# Session 10: max-w-2xl → max-w-5xl to match edit page; Stimulus Back button added. %>

<div class="max-w-5xl mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Add Component</h1>

  <%= render "form", component: @component %>

  <%# Stimulus Back button — history.back() primary; components index as fallback %>
  <div class="mt-4">
    <a href="#"
       data-controller="back"
       data-back-fallback-url-value="<%= components_path %>"
       data-action="click->back#go"
       class="text-sm text-stone-700 hover:text-stone-900">← Back</a>
  </div>
</div>
