<%= link_to component_path(component), class: "flex flex-col gap-1 min-h-48 p-4 border border-stone-200 hover:border-stone-300" do %>
  <div class="font-medium"><%= component.component_type.name %></div>
  <div class="mb-4 text-sm text-stone-500 line-clamp-2"><%= component.description %></div>

  <div class="flex-1"></div>

  <div class="flex flex-col gap-2 text-xs">
    <% {
      "Owner" => component.owner.user_name,
      "Computer" => component.computer&.computer_model&.name || "Spare",
    }.each do |key, value| %>
      <div class="w-full flex items-start gap-2 text-stone-700">
        <span class="text-stone-500"><%= key %></span>
        <div class="flex-1 min-w-4 mt-2 border-t border-stone-300"></div>
        <span class="font-medium text-right line-clamp-1"><%= value %></span>
      </div>
    <% end %>
  </div>
<% end %>