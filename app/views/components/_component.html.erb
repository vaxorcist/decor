<%# decor/app/views/components/_component.html.erb - version 1.2 %>
<%# Updated: Added Serial Number as second column (from computer) %>

<tr id="<%= dom_id component %>" class="hover:bg-stone-50">
  <!-- Computer -->
  <td class="px-4 py-3 whitespace-nowrap text-stone-600">
    <% if component.computer %>
      <%= link_to component.computer.computer_model.name, component.computer, class: "text-stone-700 hover:text-stone-900" %>
    <% else %>
      <span class="text-stone-400">Spare</span>
    <% end %>
  </td>
  
  <!-- Serial Number (from computer) -->
  <td class="px-4 py-3 whitespace-nowrap text-stone-600">
    <%= component.computer&.serial_number.presence || "â€”" %>
  </td>
  
  <!-- Type -->
  <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900">
    <%= link_to component.component_type.name, component, class: "text-indigo-600 hover:text-indigo-900" %>
  </td>
  
  <!-- Description - with max-width to prevent layout breaking -->
  <td class="px-4 py-3 text-stone-600" style="max-width: 300px;">
    <div class="truncate">
      <%= component.description.presence || "â€”" %>
    </div>
  </td>
  
  <!-- Owner -->
  <td class="px-4 py-3 whitespace-nowrap text-stone-600">
    <%= link_to component.owner.user_name, component.owner, class: "text-stone-700 hover:text-stone-900" %>
  </td>
  
  <!-- Actions -->
  <td class="px-4 py-3 whitespace-nowrap text-right">
    <%= link_to "View", component, class: "text-stone-700 hover:text-stone-900 mr-4" %>
    <% if Current.owner == component.owner %>
      <%= link_to "Edit", edit_component_path(component), class: "text-stone-700 hover:text-stone-900" %>
    <% end %>
  </td>
</tr>
