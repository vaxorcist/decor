<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h1 class="text-2xl font-semibold"><%= @computer.computer_model.name %></h1>
      <p class="text-sm text-stone-600">Owned by <%= link_to @computer.owner.user_name, @computer.owner, class: "font-medium underline text-stone-700 hover:text-stone-900" %></p>
    </div>
    <% if Current.owner == @computer.owner || admin? %>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_computer_path(@computer), class: button_classes(style: :primary) %>
        <%= button_to "Delete", computer_path(@computer), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: button_classes(style: :secondary) %>
      </div>
    <% end %>
  </div>

  <div class="bg-white border border-stone-200 rounded p-4 mb-6">
    <dl class="grid grid-cols-2 gap-3 text-sm">
      <% if @computer.serial_number.present? %>
        <div>
          <dt class="text-xs font-medium text-stone-500 uppercase tracking-wider">Serial Number</dt>
          <dd class="mt-1"><%= @computer.serial_number %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-xs font-medium text-stone-500 uppercase tracking-wider">Condition</dt>
        <dd class="mt-1"><%= @computer.condition.name %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-stone-500 uppercase tracking-wider">Run Status</dt>
        <dd class="mt-1"><%= @computer.run_status.name %></dd>
      </div>
      <% if @computer.description.present? %>
        <div class="col-span-2">
          <dt class="text-xs font-medium text-stone-500 uppercase tracking-wider">Description</dt>
          <dd class="mt-1 whitespace-pre-wrap"><%= @computer.description %></dd>
        </div>
      <% end %>
      <% if @computer.history.present? %>
        <div class="col-span-2">
          <dt class="text-xs font-medium text-stone-500 uppercase tracking-wider">History</dt>
          <dd class="mt-1 whitespace-pre-wrap"><%= @computer.history %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div>
    <div class="flex justify-between items-center mb-3">
      <h2 class="text-lg font-semibold">Components (<%= @components.count %>)</h2>
      <% if Current.owner == @computer.owner || admin? %>
        <%= link_to "Add Component", new_component_path(computer_id: @computer.id), class: button_classes(style: :secondary) %>
      <% end %>
    </div>

    <% if @components.any? %>
      <div class="bg-white border border-stone-200 rounded">
        <table class="min-w-full divide-y divide-stone-200">
          <thead class="bg-stone-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Type</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Description</th>
              <th class="px-4 py-2"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-stone-200 text-sm">
            <% @components.each do |component| %>
              <tr>
                <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900"><%= component.component_type.name %></td>
                <td class="px-4 py-3 text-stone-600"><%= truncate(component.description, length: 80) || "—" %></td>
                <td class="px-4 py-3 whitespace-nowrap text-right">
                  <%= link_to "View", component_path(component), class: "text-stone-700 hover:text-stone-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-stone-500">No components attached to this computer.</p>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to #{@computer.owner.user_name}", @computer.owner, class: "text-sm text-stone-700 hover:text-stone-900" %>
  </div>
</div>
