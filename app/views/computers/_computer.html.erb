<%= link_to computer_path(computer), class: "flex flex-col gap-1 h-64 p-4 border border-stone-200 hover:border-stone-300" do %>
  <div class="font-medium"><%= computer.computer_model.name %></div>
  <div class="mb-4 text-sm text-stone-500 line-clamp-2"><%= computer.description %></div>

  <div class="flex-1"></div>

  <div class="flex flex-col gap-2 text-xs">
    <% {
      "Owner" => computer.owner.user_name,
      "Serial" => computer.serial_number.presence || "--",
      "Condition" => computer.condition.name,
      "Run Status" => computer.run_status.name
    }.each do |key, value| %>
      <div class="w-full flex items-start gap-2 text-stone-700">
        <span class="text-stone-500"><%= key %></span>
        <div class="flex-1 min-w-4 mt-2 border-t border-stone-300"></div>
        <span class="font-medium text-right line-clamp-1"><%= value %></span>
      </div>
    <% end %>
  </div>
<% end %>