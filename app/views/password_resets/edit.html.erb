<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Reset Password</h1>

  <%= form_with model: @owner, url: password_reset_path(params[:token]), method: :patch, class: "space-y-4" do |f| %>
    <%= render "common/record_errors", record: @owner %>

    <div>
      <%= f.label :password, "New Password", class: "block text-sm font-medium text-stone-700" %>
      <%= f.password_field :password, required: true, autofocus: true, class: field_classes %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-stone-700" %>
      <%= f.password_field :password_confirmation, required: true, class: field_classes %>
    </div>

    <div>
      <%= f.submit "Reset Password", class: button_classes(style: :primary) %>
    </div>
  <% end %>
</div>
