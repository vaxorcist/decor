<div class="max-w-7xl mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Owners</h1>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <%= render "filters" %>

    <div id="owners" class="col-span-3 self-start grid grid-cols-1 md:grid-cols-3 gap-4">
      <% if @page.records.any? %>
        <% @page.records.each do |owner| %>
          <%= render "owner", owner: %>
        <% end %>
      <% else %>
        <%= empty_state("No owners found matching your search") %>
      <% end %>
    </div>

    <%= render "shared/load_more", id: :load_more_owners, page: @page, path: owners_path %>
  </div>
</div>
