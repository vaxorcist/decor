<%= form_with url: owners_path, method: :get, local: true, class: "col-span-1 self-start flex flex-col gap-4 mb-4 p-4 bg-stone-100" do |form| %>
  <div class="-mb-2 font-medium">Filters</div>

  <div>
    <%= form.label :query, "Search", class: "text-sm text-stone-600 font-medium" %>
    <%= form.search_field :query, value: params[:query], placeholder: "Search...", class: field_classes %>
  </div>

  <div class="flex flex-col">
    <%= form.label :country, "Country", class: "text-sm text-stone-600 font-medium" %>
    <%= form.select :country, owner_filter_country_options, { selected: owner_filter_country_selected, include_blank: "Any" }, { class: field_classes } %>
  </div>

  <div class="flex justify-end gap-2">
    <%= link_to "Reset", owners_path, class: button_classes(style: :secondary) %>
    <%= form.submit "Apply", class: button_classes(style: :secondary) %>
  </div>
<% end %>
