<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Pending Invites</h1>
    <%= link_to "Invite Owner", new_admin_invite_path, class: button_classes(style: :primary) %>
  </div>

  <% if @invites.any? %>
    <div class="bg-white border border-stone-200 rounded">
      <table class="min-w-full divide-y divide-stone-200">
        <thead class="bg-stone-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Email</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Sent</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Expires</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-stone-200 text-sm">
          <% @invites.each do |invite| %>
            <tr>
              <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900"><%= invite.email %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= time_ago_in_words(invite.sent_at) %> ago</td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600">
                <% if invite.expired? %>
                  <span class="text-stone-700">Expired</span>
                <% else %>
                  in <%= time_ago_in_words(invite.sent_at + Invite::EXPIRY) %>
                <% end %>
              </td>
              <td class="px-4 py-3 whitespace-nowrap text-right space-x-2">
                <%= button_to "Delete", admin_invite_path(invite), method: :delete, data: { turbo_confirm: "Delete this invitation?" }, class: "text-stone-700 hover:text-stone-900 text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white border border-stone-200 rounded p-4 text-center text-sm text-stone-500">
      No pending invitations.
    </div>
  <% end %>
</div>
