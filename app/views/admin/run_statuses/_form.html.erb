<%= form_with model: [:admin, run_status], class: "space-y-4" do |f| %>
  <%= render "common/record_errors", record: run_status %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-stone-700" %>
    <%= f.text_field :name, required: true, autofocus: true, class: field_classes %>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: button_classes(style: :primary) %>
    <%= link_to "Cancel", admin_run_statuses_path, class: button_classes(style: :secondary) %>
  </div>
<% end %>
