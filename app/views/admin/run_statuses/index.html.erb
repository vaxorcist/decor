<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Run Statuses</h1>
    <%= link_to "Add Run Status", new_admin_run_status_path, class: button_classes(style: :primary) %>
  </div>

  <% if @run_statuses.any? %>
    <div class="bg-white border border-stone-200 rounded">
      <table class="min-w-full divide-y divide-stone-200">
        <thead class="bg-stone-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Name</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Computers</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-stone-200 text-sm">
          <% @run_statuses.each do |run_status| %>
            <tr>
              <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900"><%= run_status.name %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= run_status.computers.size %></td>
              <td class="px-4 py-3 whitespace-nowrap text-right space-x-2">
                <%= link_to "Edit", edit_admin_run_status_path(run_status), class: "text-stone-700 hover:text-stone-900 text-sm" %>
                <% if run_status.computers.empty? %>
                  <%= button_to "Delete", admin_run_status_path(run_status), method: :delete, data: { turbo_confirm: "Delete this run status?" }, class: "text-stone-700 hover:text-stone-900 text-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white border border-stone-200 rounded p-4 text-center text-sm text-stone-500">
      No run statuses yet.
    </div>
  <% end %>
</div>
