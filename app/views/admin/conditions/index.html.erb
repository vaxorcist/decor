<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Conditions</h1>
    <%= link_to "Add Condition", new_admin_condition_path, class: button_classes(style: :primary) %>
  </div>

  <% if @conditions.any? %>
    <div class="bg-white border border-stone-200 rounded">
      <table class="min-w-full divide-y divide-stone-200">
        <thead class="bg-stone-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Name</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Computers</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-stone-200 text-sm">
          <% @conditions.each do |condition| %>
            <tr>
              <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900"><%= condition.name %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= condition.computers.size %></td>
              <td class="px-4 py-3 whitespace-nowrap text-right space-x-2">
                <%= link_to "Edit", edit_admin_condition_path(condition), class: "text-stone-700 hover:text-stone-900 text-sm" %>
                <% if condition.computers.empty? %>
                  <%= button_to "Delete", admin_condition_path(condition), method: :delete, data: { turbo_confirm: "Delete this condition?" }, class: "text-stone-700 hover:text-stone-900 text-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white border border-stone-200 rounded p-4 text-center text-sm text-stone-500">
      No conditions yet.
    </div>
  <% end %>
</div>
